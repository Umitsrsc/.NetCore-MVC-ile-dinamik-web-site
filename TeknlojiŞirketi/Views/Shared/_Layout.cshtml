@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Sarsıcı Teknoloji</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/SolutionPage/assets/favicon.ico" />
    <!-- Custom Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/SolutionPage/css/styles.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            
            <div class="container px-5">
                <a href="/Home/Index" class="brand-link">
                    <img src="/Logo.png" width="100" height="100" alt="Logo" class="brand-image img-circle elevation-3"
                         style="opacity: .8">
                    @*<span class="brand-text font-weight-light">Admin Paneli</span>*@
                </a>
                @*<a class="navbar-brand" href="/Home/Index"><span class="fw-bolder text-primary">Sarsıcı Teknoloji</span></a>*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small fw-bolder">
                        <li class="nav-item"><a class="nav-link" href="/Home/Index">Anasayfa</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Abouts">Hakkımda</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Solution">Çözümler</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Career">Kariyer</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/News">Basın</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Contact">İletişim</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Login/Index">Login</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        @RenderBody()
        <section class="py-5 bg-gradient-primary-to-secondary text-white">
            <div class="container px-5 my-5">
                <div class="text-center">
                    <h2 class="display-4 fw-bolder mb-4">Birlikte bir şeyler inşa edelim</h2>
                    <a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" href="/Home/Contact">Bize Ulaşın</a>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer-->
    <footer class="bg-white py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0">Copyright &copy; Ümit Sarsıcı 2023</div></div>
            </div>
        </div>
        <br />
        <div class="col-lg-6 h-100 text-center text-lg-end my-auto">
            <ul class="list-inline mb-0">
                <li class="list-inline-item me-4">
                    <a href="#!"><i class="bi-facebook fs-3"></i></a>
                </li>
                <li class="list-inline-item me-4">
                    <a href="#!"><i class="bi-twitter fs-3"></i></a>
                </li>
                <li class="list-inline-item">
                    <a href="#!"><i class="bi-instagram fs-3"></i></a>
                </li>
            </ul>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/SolutionPage/js/scripts.js"></script>
</body>
</html>
