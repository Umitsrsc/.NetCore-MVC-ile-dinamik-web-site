@model TeknlojiŞirketi.Models.News
@{
    ViewData["Title"] = "EditNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Güncelleme sayfası</h1>
@using (Html.BeginForm("EditNews", "AdminNews", FormMethod.Post))
{
    <div class="from-group">
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Title)
        <br /><br />
        @Html.Label("AçıkLama")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description)
        <br /><br />
        @Html.Label("Image")
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Image)
        <br />
        <button class="btn btn-success">Güncelle</button>


    </div>
}