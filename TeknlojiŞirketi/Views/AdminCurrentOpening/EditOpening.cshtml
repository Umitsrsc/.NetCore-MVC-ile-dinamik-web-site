@model TeknlojiŞirketi.Models.CurrentOpening
@{
    ViewData["Title"] = "EditOpening";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Güncelleme sayfası</h1>
@using (Html.BeginForm("EditOpening", "AdminCurrentOpening", FormMethod.Post))
 {
    <div class="from-group">
        @Html.Label("Açık pozisyon")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
        <br /><br />
        @Html.Label("AçıkLama")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description)
        <br /><br />
        @Html.Label("Konum")
        @Html.TextBoxFor(x => x.Location, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Location)
        <br />
        <button class="btn btn-success">Güncelle</button>


    </div>
 }

