@using TeknlojiŞirketi.Concrete
@model List<CurrentOpening>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>tarih</th>
        <th>Konum</th>
        <th>Sİl</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.DateTime</td>
            <td>@item.Location</td>
            <td><a href="/AdminCurrentOpening/DeleteOpening/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminCurrentOpening/EditOpening/@item.Id" class="btn btn-warning">Güncelle</a></td>        </tr>
    }
</table>
<a href="/AdminCurrentOpening/AddOpening" class="btn btn-info">Ekle</a>
